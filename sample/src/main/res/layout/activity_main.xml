<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/dividerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/default_margin"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="16dp"
            android:layout_height="1dp"
            android:background="@android:color/background_dark"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin"
            android:text="Default view without attributes"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/default_margin"
            android:background="@android:color/background_dark"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <com.stfalcon.customswipeablebutton.CustomSwipeableButton
        android:id="@+id/customSwipeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        app:layout_constraintTop_toBottomOf="@+id/dividerContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/dividerContainer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/default_margin"
        app:layout_constraintTop_toBottomOf="@+id/customSwipeButton">

        <View
            android:layout_width="16dp"
            android:layout_height="1dp"
            android:background="@android:color/background_dark"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin"
            android:text="Set parameters using attributes"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/default_margin"
            android:background="@android:color/background_dark"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <com.stfalcon.customswipeablebutton.CustomSwipeableButton
        android:id="@+id/customSwipeButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        app:isClickToSwipeEnable="false"
        app:checkedText="@string/checked_state_text"
        app:uncheckedText="@string/unchecked_state_text"
        app:checkedTextColor="@color/checkedTextColor"
        app:uncheckedTextColor="@color/uncheckedTextColor"
        app:swipeProgressToFinish="0.3"
        app:swipeProgressToStart="0.7"
        app:checkedIcon="@drawable/ic_visible"
        app:uncheckedIcon="@drawable/ic_usvisible"
        app:checkedToggleBackground="@drawable/shape_sample_checked_toggle"
        app:uncheckedToggleBackground="@drawable/shape_sample_unchecked_toggle"
        app:checkedBackground="@drawable/shape_sample_scrolling_view_checked"
        app:uncheckedBackground="@drawable/shape_sample_scrolling_view_unchecked"
        app:textSize="12sp"
        app:durationAnimation="250"
        app:layout_constraintTop_toBottomOf="@+id/dividerContainer2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/dividerContainer3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/default_margin"
        app:layout_constraintTop_toBottomOf="@+id/customSwipeButton2">

        <View
            android:layout_width="16dp"
            android:layout_height="1dp"
            android:background="@android:color/background_dark"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin"
            android:text="Programmatically set parameters"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/default_margin"
            android:background="@android:color/background_dark"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <com.stfalcon.customswipeablebutton.CustomSwipeableButton
        android:id="@+id/customSwipeButton3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        app:layout_constraintTop_toBottomOf="@+id/dividerContainer3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/dividerContainer4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/default_margin"
        app:layout_constraintTop_toBottomOf="@+id/customSwipeButton3">

        <View
            android:layout_width="16dp"
            android:layout_height="1dp"
            android:background="@android:color/background_dark"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin"
            android:text="Programmatically animate"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/default_margin"
            android:background="@android:color/background_dark"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <Button
        android:id="@+id/animateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Animate Swipe"
        app:layout_constraintTop_toBottomOf="@+id/dividerContainer4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.stfalcon.customswipeablebutton.CustomSwipeableButton
        android:id="@+id/customSwipeButton4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        app:layout_constraintTop_toBottomOf="@+id/animateBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>